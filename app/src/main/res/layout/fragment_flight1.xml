<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.Flight1Fragment"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_centerHorizontal="true"
    android:background="@drawable/tab_indicator_flight">

    <TextView
        android:id="@+id/tv_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Từ"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:textColor="@color/white"/>
    <ImageView
        android:id="@+id/ic_from"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_airplane"
        app:layout_constraintTop_toBottomOf="@id/tv_from"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"/>
    <Spinner
        android:id="@+id/sp_from"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_from"
        app:layout_constraintLeft_toRightOf="@id/ic_from"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/flight_from_spinner"/>
    <TextView
        android:id="@+id/tv_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đến"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/ic_from"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:textColor="@color/white"/>
    <ImageView
        android:id="@+id/ic_to"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_airplane2"
        app:layout_constraintTop_toBottomOf="@id/tv_to"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"/>
    <Spinner
        android:id="@+id/sp_to"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_to"
        app:layout_constraintLeft_toRightOf="@id/ic_to"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/flight_from_spinner"/>
    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ngày đi"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/ic_to"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:textColor="@color/white"/>
    <ImageView
        android:id="@+id/ic_date"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_calendar"
        app:layout_constraintTop_toBottomOf="@id/tv_date"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"/>
    <TextView
        android:id="@+id/sp_date"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_date"
        app:layout_constraintLeft_toRightOf="@id/ic_date"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/flight_from_spinner"/>
    <TextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hành khách"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/ic_date"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:textColor="@color/white"
        app:layout_constraintHorizontal_bias="0.5"/>
    <ImageView
        android:id="@+id/ic_number"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_customer"
        app:layout_constraintTop_toBottomOf="@id/tv_number"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"/>
    <Spinner
        android:id="@+id/sp_number"
        android:layout_width="80dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_number"
        app:layout_constraintLeft_toRightOf="@id/ic_number"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/flight_from_spinner"
        app:layout_constraintHorizontal_bias="0.5"/>
    <TextView
        android:id="@+id/tv_chair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hạng ghế"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/ic_date"
        app:layout_constraintLeft_toRightOf="@id/ic_number"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="100dp"
        android:textColor="@color/white"
        app:layout_constraintHorizontal_bias="0.5"/>
    <ImageView
        android:id="@+id/ic_chair"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_chair"
        app:layout_constraintTop_toBottomOf="@id/tv_chair"
        app:layout_constraintLeft_toRightOf="@id/sp_number"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"/>
    <Spinner
        android:id="@+id/sp_chair"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_chair"
        app:layout_constraintLeft_toRightOf="@id/ic_chair"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/flight_from_spinner"
        app:layout_constraintHorizontal_bias="0.5"/>


</androidx.constraintlayout.widget.ConstraintLayout>